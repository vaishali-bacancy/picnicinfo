<!DOCTYPE html>
<html>
<head>
  <title>Picnic Info</title>
  <%= stylesheet_link_tag	'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-top navbar-fixed-top">
    <div class="container-fluid">
      <div class="container">
        <div class="navbar-header">
   	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
   	        <span class="sr-only">Toggle navigation</span>
   	        <span class="icon-bar"></span>
   	        <span class="icon-bar"></span>
   	        <span class="icon-bar"></span>
   	      </button>
   	      <a class="navbar-brand" href="/">Picnic Info</a>
   	    </div>

      <div id="navbar" class="navbar-collapse collapse">
  		  <ul class="nav navbar-nav">
    		  <li class="dropdown">
      		  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">States <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "List", states_path %></li>
        			  <li><%= link_to "New", new_state_path %></li>
      			  </ul>
    		  </li>
  		  </ul>

        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Address <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "List", addresses_path %></li>
              </ul>
          </li>
        </ul>

  		  <ul class="nav navbar-nav">
    		  <li class="dropdown">
      		  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Place <span class="caret"></span></a>
      			  <ul class="dropdown-menu">
        			  <li><%= link_to "List", places_path %></li>
        			  <li><%= link_to "New", new_place_path %></li>
      			  </ul>
    		  </li>
  		  </ul>

        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Ticket <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "List", tickets_path %></li>
              <li><%= link_to "New", new_ticket_path %></li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Timing <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "List", timings_path %></li>
                <li><%= link_to "New", new_timing_path %></li>
              </ul>
          </li>
        </ul>
        
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Picture <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "List", pictures_path %></li>
                <li><%= link_to "New", new_picture_path %></li>
              </ul>
          </li>
        </ul>


        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <% if user_signed_in? %>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <%= current_user.username %> <span class="caret"></span></a>
            <% end %>
              <ul class="dropdown-menu">
                <% if user_signed_in? %>
                  <li><%= link_to "Edit profile", edit_user_registration_path %></li>
                  <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                <% end %>
              </ul>
          </li>
        </ul>

      </div>
      </div>
    </div>
  </nav>
  
<div id="main-container" class="container">
  <%= yield %>
</div>
</body>
</html>
