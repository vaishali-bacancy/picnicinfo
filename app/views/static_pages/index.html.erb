<!DOCTYPE html>
<html>
<head>
  <title>Picnic Info</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-top navbar-fixed-top">
    <div class="container-fluid">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/"><b>Picnic Info</b></a>
        </div>
      <div>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <% if user_signed_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %>  <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Edit profile",edit_user_registration_path %></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
                  </ul>
          <% else %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> Login  <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign up",new_user_registration_path %></li>
                <li><%= link_to "Login", new_user_session_path %></li>
              </ul>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  <br>
  <h2>Place List</h2>
  <table class="table table-striped table-bordered table-hover">
    <tbody>
      <% @places.each do |place| %>
        <tr>
          <td class="col-md-2"><%= place.place_name %></td>
          <td><%= link_to 'View More', view_ticket_path(place), class: "btn btn-info"%></td>
        </tr>
      <%end%>
    </tbody>
  </table>

<div id="main-container" class="container">
  <%= yield %>
</div>

</body>
</html>
